<Window x:Class="VentasApp.Desktop.Views.Cliente.EditarClienteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar Cliente" Height="260" Width="420" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Nombre" Grid.Row="0" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
        <TextBox x:Name="TxtNombre" Grid.Row="0" Grid.Column="1" Margin="0,0,0,10"/>
        
        <TextBlock Text="DNI" Grid.Row="1" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
        <TextBox x:Name="TxtDni" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10"/>
        
        <TextBlock Text="Tel&#233;fonos" Grid.Row="2" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
        <TextBox x:Name="TxtTelefonos" Grid.Row="2" Grid.Column="1" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancelar" Margin="0,0,10,0" Click="OnCancelarClick"/>
            <Button Content="Guardar" Click="OnGuardarClick"/>
        </StackPanel>
    </Grid>
</Window>