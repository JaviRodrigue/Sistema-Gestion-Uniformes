<Window x:Class="VentasApp.Desktop.Views.Cliente.EditarClienteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Editar Cliente" Height="385" Width="520" WindowStartupLocation="CenterOwner">
    <Grid Background="{DynamicResource SecondaryPastel}">
        <Border CornerRadius="12" Background="{DynamicResource SurfaceCard}" Padding="16" Margin="16">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="12" Opacity="0.2"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,12">
                    <Border Width="40" Height="40" CornerRadius="20" Background="{DynamicResource SecondaryPastel}" DockPanel.Dock="Left">
                        <materialDesign:PackIcon Kind="Account" Width="22" Height="22" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource TextDark}"/>
                    </Border>
                    <TextBlock Text="Editar cliente" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="{DynamicResource TextDark}"/>
                </DockPanel>

                <!-- Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBox x:Name="TxtNombre"
                             materialDesign:HintAssist.Hint="Nombre"
                             Style="{StaticResource CustomOutlinedTextBox}"
                             Margin="0,0,0,12"
                             MinWidth="320"/>

                    <TextBox x:Name="TxtDni" Grid.Row="1"
                             materialDesign:HintAssist.Hint="DNI"
                             Style="{StaticResource CustomOutlinedTextBox}"
                             Margin="0,0,0,12"
                             MinWidth="320"/>

                    <TextBox x:Name="TxtTelefonos" Grid.Row="2"
                             materialDesign:HintAssist.Hint="Tel&#233;fonos (separados por coma)"
                             Style="{StaticResource CustomOutlinedTextBox}"
                             Margin="0,0,0,0"
                             MinWidth="320"/>
                    </Grid>
                </ScrollViewer>

                <!-- Actions -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="{DynamicResource AccentRed}"
                            BorderBrush="{DynamicResource AccentRed}"
                            Margin="0,0,10,0"
                            Click="OnCancelarClick">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Close" Width="16" Height="16" Foreground="{DynamicResource TextOnDark}"/>
                            <TextBlock Text="Cancelar" Margin="6,0,0,0" Foreground="{DynamicResource TextOnDark}"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="{DynamicResource AccentBlue}"
                            BorderBrush="{DynamicResource AccentBlue}"
                            Click="OnGuardarClick">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ContentSave" Width="16" Height="16" Foreground="{DynamicResource TextOnDark}"/>
                            <TextBlock Text="Guardar" Margin="6,0,0,0" Foreground="{DynamicResource TextOnDark}"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
