<Window x:Class="VentasApp.Desktop.Views.Cliente.AgregarClienteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nuevo Cliente" Height="420" Width="520"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource SecondaryPastel}">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Alta de Cliente" FontSize="20" FontWeight="Bold" Margin="0,0,0,12"/>

            <TextBlock Text="Nombre (obligatorio)"/>
            <TextBox x:Name="TxtNombre" Margin="0,4,0,10"/>

            <TextBlock Text="DNI / CUIT (obligatorio)"/>
            <TextBox x:Name="TxtDni" Margin="0,4,0,10"/>

            <TextBlock Text="Telefonos (opcional)"/>
            <TextBox x:Name="TxtTelefonos" Margin="0,4,0,10"/>

            <TextBlock Text="Email (opcional)"/>
            <TextBox x:Name="TxtEmail" Margin="0,4,0,10"/>

            <TextBlock Text="DirecciÃ³n (opcional)"/>
            <TextBox x:Name="TxtDireccion" Margin="0,4,0,10"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancelar" Margin="0,0,8,0" Width="90" IsCancel="True"/>
            <Button Content="Guardar" Width="90" IsDefault="True" Click="OnGuardarClick"/>
        </StackPanel>
    </Grid>
</Window>