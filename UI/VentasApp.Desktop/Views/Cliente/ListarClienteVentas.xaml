<Window x:Class="VentasApp.Desktop.Views.Cliente.ListarClienteVentas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Seleccionar Cliente" Height="560" Width="640"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource SecondaryPastel}">
    <Grid>
        <Border CornerRadius="12" Background="White" Padding="16" Margin="16">
            <Border.Effect>
                <DropShadowEffect Color="#DDDDDD" BlurRadius="12" Opacity="0.45"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,12">
                    <Border Width="40" Height="40" CornerRadius="20" Background="{StaticResource SecondaryPastel}" DockPanel.Dock="Left">
                        <materialDesign:PackIcon Kind="AccountSearch" Width="22" Height="22" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{StaticResource TextDark}"/>
                    </Border>
                    <TextBlock Text="Seleccionar cliente" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="{StaticResource TextDark}" DockPanel.Dock="Left"/>
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="{StaticResource AccentBlue}"
                            BorderBrush="{StaticResource AccentBlue}"
                            DockPanel.Dock="Right"
                            Click="OnNuevoClienteClick">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AccountPlus" Width="16" Height="16" Foreground="White"/>
                            <TextBlock Text="Nuevo cliente" Margin="6,0,0,0" Foreground="White"/>
                        </StackPanel>
                    </Button>
                </DockPanel>

                <!-- Búsqueda -->
                <TextBox x:Name="TxtBuscar" Grid.Row="1"
                         materialDesign:HintAssist.Hint="Buscar por nombre..."
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,10"
                         TextChanged="OnBuscarTextChanged"/>

                <!-- Lista de clientes -->
                <ListBox x:Name="ListClientes" Grid.Row="2"
                         SelectionMode="Single"
                         Margin="0,0,0,0"
                         BorderThickness="1"
                         BorderBrush="{StaticResource SecondaryPastel}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="4,6">
                                <TextBlock Text="{Binding Nombre}" FontWeight="SemiBold" FontSize="14" Foreground="{StaticResource TextDark}"/>
                                <TextBlock Text="{Binding DNI}" FontSize="11" Foreground="Gray"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Acciones -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="{StaticResource AccentRed}"
                            BorderBrush="{StaticResource AccentRed}"
                            Margin="0,0,8,0"
                            Click="OnCancelarClick">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Close" Width="16" Height="16" Foreground="White"/>
                            <TextBlock Text="Cancelar" Margin="6,0,0,0" Foreground="White"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="{StaticResource AccentBlue}"
                            BorderBrush="{StaticResource AccentBlue}"
                            Click="OnGuardarClick">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ContentSave" Width="16" Height="16" Foreground="White"/>
                            <TextBlock Text="Guardar" Margin="6,0,0,0" Foreground="White"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
