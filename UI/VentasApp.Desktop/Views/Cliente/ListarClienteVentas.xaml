<Window x:Class="VentasApp.Desktop.Views.Cliente.ListarClienteVentas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Seleccionar Cliente" Height="560" Width="640"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource SecondaryPastel}">
    <Grid>
        <Border CornerRadius="12" Background="{DynamicResource SurfaceCard}" Padding="16" Margin="16">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="12" Opacity="0.2"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,12">
                    <Border Width="40" Height="40" CornerRadius="20" Background="{DynamicResource SecondaryPastel}" DockPanel.Dock="Left">
                        <materialDesign:PackIcon Kind="AccountSearch" Width="22" Height="22" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource TextDark}"/>
                    </Border>
                    <TextBlock Text="Seleccionar cliente" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="{DynamicResource TextDark}" DockPanel.Dock="Left"/>
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="{DynamicResource AccentBlue}"
                            BorderBrush="{DynamicResource AccentBlue}"
                            DockPanel.Dock="Right"
                            Click="OnNuevoClienteClick">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AccountPlus" Width="16" Height="16" Foreground="{DynamicResource TextOnDark}"/>
                            <TextBlock Text="Nuevo cliente" Margin="6,0,0,0" Foreground="{DynamicResource TextOnDark}"/>
                        </StackPanel>
                    </Button>
                </DockPanel>

                <!-- Busqueda -->
                <TextBox x:Name="TxtBuscar" Grid.Row="1"
                         materialDesign:HintAssist.Hint="Buscar por nombre..."
                         Style="{StaticResource CustomOutlinedTextBox}"
                         Margin="0,0,0,10"
                         TextChanged="OnBuscarTextChanged"/>

                <!-- Lista de clientes -->
                <ListBox x:Name="ListClientes" Grid.Row="2"
                         SelectionMode="Single"
                         Margin="0,0,0,0"
                         BorderThickness="1"
                         BorderBrush="{DynamicResource SecondaryPastel}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="4,6">
                                <TextBlock Text="{Binding Nombre}" FontWeight="SemiBold" FontSize="14" Foreground="{DynamicResource TextDark}"/>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Phone" Width="12" Height="12" Foreground="{DynamicResource TextMuted}" VerticalAlignment="Center" Margin="0,0,4,0">
                                        <materialDesign:PackIcon.Style>
                                            <Style TargetType="materialDesign:PackIcon">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Telefonos.Count}" Value="0">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </materialDesign:PackIcon.Style>
                                    </materialDesign:PackIcon>
                                    <TextBlock FontSize="11" Foreground="{DynamicResource TextMuted}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="{Binding Telefonos[0].Numero}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Telefonos.Count}" Value="0">
                                                        <Setter Property="Text" Value="Sin telefono"/>
                                                        <Setter Property="FontStyle" Value="Italic"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Acciones -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="{DynamicResource AccentRed}"
                            BorderBrush="{DynamicResource AccentRed}"
                            Margin="0,0,8,0"
                            Click="OnCancelarClick">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Close" Width="16" Height="16" Foreground="{DynamicResource TextOnDark}"/>
                            <TextBlock Text="Cancelar" Margin="6,0,0,0" Foreground="{DynamicResource TextOnDark}"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="{DynamicResource AccentBlue}"
                            BorderBrush="{DynamicResource AccentBlue}"
                            Click="OnGuardarClick">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ContentSave" Width="16" Height="16" Foreground="{DynamicResource TextOnDark}"/>
                            <TextBlock Text="Guardar" Margin="6,0,0,0" Foreground="{DynamicResource TextOnDark}"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
