<Window x:Class="VentasApp.Desktop.Views.Productos.AgregarProductoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Nuevo Producto" Height="560" Width="640"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource SecondaryPastel}">
    <Grid>
        <Border CornerRadius="12" Background="White" Padding="16" Margin="16">
            <Border.Effect>
                <DropShadowEffect Color="#DDDDDD" BlurRadius="12" Opacity="0.45"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,12">
                    <Border Width="40" Height="40" CornerRadius="20" Background="{StaticResource SecondaryPastel}" DockPanel.Dock="Left">
                        <materialDesign:PackIcon Kind="BasketPlus" Width="22" Height="22" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{StaticResource TextDark}"/>
                    </Border>
                    <TextBlock Text="Alta de Producto" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="{StaticResource TextDark}"/>
                </DockPanel>

                <!-- Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBox x:Name="TxtNombre"
                                 materialDesign:HintAssist.Hint="Nombre (obligatorio)"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,0,12"/>

                        <ComboBox x:Name="CmbCategoria" Margin="0,0,0,12" AutomationProperties.Name="Categoria"
                                  materialDesign:HintAssist.Hint="Categoría (obligatorio)"
                                  Style="{StaticResource MaterialDesignFilledComboBox}"
                                  MinWidth="320">
                            <ComboBoxItem Content="Uniforme"/>
                            <ComboBoxItem Content="Librería"/>
                        </ComboBox>

                        <TextBox x:Name="TxtCosto"
                                 materialDesign:HintAssist.Hint="Costo (obligatorio)"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,0,12"/>

                        <TextBox x:Name="TxtPrecioVenta"
                                 materialDesign:HintAssist.Hint="Precio de venta (obligatorio)"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,0,12"/>

                        <TextBox x:Name="TxtCodigoBarra"
                                 materialDesign:HintAssist.Hint="Código de barras (opcional)"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,0,0"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- Actions -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="{StaticResource AccentRed}"
                            BorderBrush="{StaticResource AccentRed}"
                            Margin="0,0,8,0"
                            IsCancel="True">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Close" Width="16" Height="16" Foreground="White"/>
                            <TextBlock Text="Cancelar" Margin="6,0,0,0" Foreground="White"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="{StaticResource AccentBlue}"
                            BorderBrush="{StaticResource AccentBlue}"
                            IsDefault="True" Click="OnGuardarClick">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ContentSave" Width="16" Height="16" Foreground="White"/>
                            <TextBlock Text="Guardar" Margin="6,0,0,0" Foreground="White"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
