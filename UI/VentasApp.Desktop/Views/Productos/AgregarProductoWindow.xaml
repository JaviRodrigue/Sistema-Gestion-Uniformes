<Window x:Class="VentasApp.Desktop.Views.Productos.AgregarProductoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nuevo Producto" Height="520" Width="560"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource SecondaryPastel}">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Alta de Producto" FontSize="20" FontWeight="Bold" Margin="0,0,0,12"/>

            <TextBlock Text="Nombre (obligatorio)"/>
            <TextBox x:Name="TxtNombre" Margin="0,4,0,10" AutomationProperties.Name="Nombre"/>

            <TextBlock Text="Categoria (obligatorio)"/>
            <ComboBox x:Name="CmbCategoria" Margin="0,4,0,10" AutomationProperties.Name="Categoria">
                <ComboBoxItem Content="Uniforme"/>
                <ComboBoxItem Content="Librería"/>
            </ComboBox>

            <TextBlock Text="Costo (obligatorio)"/>
            <TextBox x:Name="TxtCosto" Margin="0,4,0,10" AutomationProperties.Name="Costo"/>

            <TextBlock Text="Precio de Venta (obligatorio)"/>
            <TextBox x:Name="TxtPrecioVenta" Margin="0,4,0,10" AutomationProperties.Name="PrecioVenta"/>

            <TextBlock Text="Código de barras (opcional)"/>
            <TextBox x:Name="TxtCodigoBarra" Margin="0,4,0,10" AutomationProperties.Name="CodigoBarra"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancelar" Margin="0,0,8,0" Width="90" IsCancel="True"/>
            <Button Content="Guardar" Width="90" IsDefault="True" Click="OnGuardarClick"/>
        </StackPanel>
    </Grid>
</Window>