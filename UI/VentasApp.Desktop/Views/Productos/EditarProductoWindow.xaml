<Window x:Class="VentasApp.Desktop.Views.Productos.EditarProductoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar Producto" Height="280" Width="420" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Nombre" Grid.Row="0" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
        <TextBox x:Name="TxtNombre" Grid.Row="0" Grid.Column="1" Margin="0,0,0,10"/>
        
        <TextBlock Text="Costo" Grid.Row="1" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
        <TextBox x:Name="TxtCosto" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10"/>
        
        <TextBlock Text="Precio Venta" Grid.Row="2" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
        <TextBox x:Name="TxtPrecioVenta" Grid.Row="2" Grid.Column="1" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancelar" Margin="0,0,10,0" Click="OnCancelarClick"/>
            <Button Content="Guardar" Click="OnGuardarClick"/>
        </StackPanel>
    </Grid>
</Window>