<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:VentasApp.Desktop.ViewModels.Ventas"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
    x:Class="VentasApp.Desktop.Views.Ventas.VentaView"
    d:DesignHeight="118.464" d:DesignWidth="566.318">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/VentasApp.Desktop;component/Resources/Templates/VentaCardTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <!-- No Height fijo: permitir que la vista se expanda -->
    <Grid Background="{StaticResource SecondaryPastel}" Margin="10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <DockPanel Grid.Row="0" Margin="10" LastChildFill="True">

            <TextBlock Text="Listado de Ventas"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{StaticResource TextDark}"
                       DockPanel.Dock="Left"
                       VerticalAlignment="Center"/>

            <Button DockPanel.Dock="Right"
                    Command="{Binding AgregarVentaCommand}"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="{StaticResource AccentBlue}"
                    BorderBrush="{StaticResource AccentBlue}"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right">

                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="CartPlus" Margin="0,0,8,0"/>
                    <TextBlock Text="NUEVA VENTA"/>
                </StackPanel>

            </Button>

        </DockPanel>

        <!-- LISTADO -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Padding="2">

            <ItemsControl ItemsSource="{Binding Ventas}"
                          ItemTemplate="{StaticResource VentaCardTemplate}"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Top">
                <!-- Forzar que cada item se estire al ancho disponible -->
                <ItemsControl.ItemContainerStyle>
                    <Style TargetType="{x:Type ContentPresenter}">
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        <Setter Property="Margin" Value="0,0,0,10"/>
                    </Style>
                </ItemsControl.ItemContainerStyle>

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Stretch"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>

        </ScrollViewer>

    </Grid>
</UserControl>