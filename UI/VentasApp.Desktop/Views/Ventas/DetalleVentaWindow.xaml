<Window x:Class="VentasApp.Desktop.Views.Ventas.DetalleVentaWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
xmlns:vm="clr-namespace:VentasApp.Desktop.ViewModels.Ventas"
xmlns:converters="clr-namespace:VentasApp.Desktop.Converters"
Title="Detalle Venta"
Height="720"
Width="1000"
WindowState="Maximized"
WindowStartupLocation="CenterOwner"
Background="{DynamicResource SecondaryPastel}">

    <Window.Resources>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
    </Window.Resources>

    <Grid Margin="20">

        <!-- ========= LAYOUT PRINCIPAL ========= -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Contenido 60/40 -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>


        <!-- ================= HEADER ================= -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Detalle de Venta"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextDark}"/>
                    <Border CornerRadius="4" 
                            Padding="8,4" 
                            Margin="12,0,0,0"
                            VerticalAlignment="Center"
                            Background="{DynamicResource AccentRed}">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Venta.Estado}" Value="Cancelada">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="CANCELADA" 
                                   FontWeight="Bold" 
                                   FontSize="12"
                                   Foreground="White"/>
                    </Border>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                    <materialDesign:PackIcon Kind="Calendar" Width="16" Height="16" Foreground="{DynamicResource TextMuted}" VerticalAlignment="Center"/>
                    <DatePicker materialDesign:HintAssist.Hint="Fecha de venta"
                                SelectedDate="{Binding Fecha, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                IsEnabled="{Binding EsEditable}"
                                Margin="8,0,0,0"
                                FontSize="13"
                                BorderBrush="{DynamicResource AccentBlue}"
                                BorderThickness="0,0,0,1"
                                Padding="4,0"
                                VerticalAlignment="Center"
                                materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource AccentBlue}"
                                Style="{StaticResource MaterialDesignFloatingHintDatePicker}">
                        <DatePicker.Resources>
                            <Style TargetType="DatePickerTextBox">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextMuted}"/>
                            </Style>
                        </DatePicker.Resources>
                    </DatePicker>
                </StackPanel>
                
                <!-- Cliente chip -->
                <Border CornerRadius="8" Padding="10,8" Margin="0,10,0,0">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="{DynamicResource SurfaceSoftBlue}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Cliente}" Value="">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderBrush" Value="{DynamicResource TextMuted}"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Account" Width="18" Height="18" VerticalAlignment="Center">
                            <materialDesign:PackIcon.Style>
                                <Style TargetType="materialDesign:PackIcon">
                                    <Setter Property="Foreground" Value="{DynamicResource AccentBlue}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Cliente}" Value="">
                                            <Setter Property="Foreground" Value="{DynamicResource TextMuted}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </materialDesign:PackIcon.Style>
                        </materialDesign:PackIcon>
                        <TextBlock Margin="8,0,0,0" VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="{Binding Cliente}"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="Foreground" Value="{DynamicResource AccentBlue}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Cliente}" Value="">
                                            <Setter Property="Text" Value="Sin cliente asignado"/>
                                            <Setter Property="FontStyle" Value="Italic"/>
                                            <Setter Property="FontWeight" Value="Normal"/>
                                            <Setter Property="Foreground" Value="{DynamicResource TextMuted}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
            <Button Grid.Column="1"
                    VerticalAlignment="Top"
                    Margin="10,0,0,0"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="{DynamicResource AccentBlue}"
                    BorderBrush="{DynamicResource AccentBlue}"
                    IsEnabled="{Binding EsEditable}"
                    Click="OnAgregarClienteClick">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="AccountSearch" Width="16" Height="16" Margin="0,0,6,0" Foreground="{DynamicResource TextOnDark}"/>
                    <TextBlock Foreground="{DynamicResource TextOnDark}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="Cambiar Cliente"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Cliente}" Value="">
                                        <Setter Property="Text" Value="Agregar Cliente"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Button>
        </Grid>



        <!-- ================= CONTENIDO LATERAL 55/45 ================= -->
        <Grid Grid.Row="1" Margin="0,10">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="55*"/>
                <!-- Items: 55% -->
                <ColumnDefinition Width="45*"/>
                <!-- Pagos: 45% -->
            </Grid.ColumnDefinitions>


            <!-- ================= ITEMS ================= -->
            <Border Grid.Column="0" Background="{DynamicResource SurfaceCard}" CornerRadius="12" Margin="0,0,10,0" Padding="16">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" BlurRadius="10" Opacity="0.1"/>
                </Border.Effect>
                <DockPanel>
                    <DockPanel DockPanel.Dock="Top" Margin="0,0,0,12">
                        <TextBlock Text="Productos" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource TextDark}" VerticalAlignment="Center"/>
                        <Button Content="Agregar item"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="{DynamicResource AccentBlue}"
                                BorderBrush="{DynamicResource AccentBlue}"
                                Foreground="{DynamicResource TextOnDark}"
                                HorizontalAlignment="Right"
                                IsEnabled="{Binding EsEditable}"
                                Command="{Binding AgregarItemCommand}"/>
                    </DockPanel>

                    <DataGrid x:Name="ItemsDataGrid"
                              ItemsSource="{Binding Venta.Items}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="{Binding EsEditable, Converter={StaticResource InverseBoolConverter}}"
                              Background="Transparent"
                              BorderThickness="0">

                        <DataGrid.Columns>

                            <DataGridCheckBoxColumn Header="?"
                                                    Binding="{Binding Entregado, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Width="50">
                                <DataGridCheckBoxColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    </Style>
                                </DataGridCheckBoxColumn.HeaderStyle>
                                <DataGridCheckBoxColumn.ElementStyle>
                                    <Style TargetType="CheckBox">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Margin" Value="6"/>
                                    </Style>
                                </DataGridCheckBoxColumn.ElementStyle>
                            </DataGridCheckBoxColumn>

                            <DataGridTemplateColumn Header="Producto" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox Name="ProductoComboBox"
                                            ItemsSource="{Binding DataContext.Productos, RelativeSource={RelativeSource AncestorType=Window}}"
                                            DisplayMemberPath="Nombre"
                                            SelectedValuePath="Id"
                                            SelectedValue="{Binding ProductId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Precio"
                                                Binding="{Binding PrecioUnitario, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                Width="120"/>

                            <DataGridTextColumn Header="Cantidad"
                                                Binding="{Binding Cantidad, Mode=TwoWay}"
                                                Width="100"/>

                            <DataGridTextColumn Header="Subtotal"
                                                Binding="{Binding Subtotal, StringFormat=C}"
                                                IsReadOnly="True"/>

                            <DataGridTemplateColumn Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="X"
                                                Command="{Binding DataContext.EliminarItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Background="{DynamicResource AccentRed}"
                                                Foreground="{DynamicResource TextOnDark}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                        </DataGrid.Columns>
                    </DataGrid>

                </DockPanel>
            </Border>

            <!-- ================= PAGOS ================= -->
            <Border Grid.Column="1" Background="{DynamicResource SurfaceCard}" CornerRadius="12" Margin="10,0,0,0" Padding="16">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" BlurRadius="10" Opacity="0.1"/>
                </Border.Effect>
                <DockPanel>
                    <DockPanel DockPanel.Dock="Top" Margin="0,0,0,12">
                        <TextBlock Text="Pagos" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource TextDark}" VerticalAlignment="Center"/>
                        <Button Content="Agregar pago"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="{DynamicResource AccentBlue}"
                                BorderBrush="{DynamicResource AccentBlue}"
                                Foreground="{DynamicResource TextOnDark}"
                                HorizontalAlignment="Right"
                                IsEnabled="{Binding EsEditable}"
                                Command="{Binding AgregarPagoCommand}"/>
                    </DockPanel>

                    <DataGrid x:Name="PagosDataGrid" ItemsSource="{Binding Venta.Pagos}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="{Binding EsEditable, Converter={StaticResource InverseBoolConverter}}"
                              Background="Transparent"
                              BorderThickness="0">

                        <DataGrid.Columns>

                            <DataGridCheckBoxColumn Header="?"
                                                    Binding="{Binding Verificado, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Width="60">
                                <DataGridCheckBoxColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    </Style>
                                </DataGridCheckBoxColumn.HeaderStyle>
                                <DataGridCheckBoxColumn.ElementStyle>
                                    <Style TargetType="CheckBox">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Margin" Value="8"/>
                                    </Style>
                                </DataGridCheckBoxColumn.ElementStyle>
                            </DataGridCheckBoxColumn>

                            <DataGridTemplateColumn Header="Fecha" Width="140">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <DatePicker SelectedDate="{Binding Fecha, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    BorderThickness="0"
                                                    Background="Transparent"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Stretch"
                                                    Margin="4,0"
                                                    materialDesign:HintAssist.Hint="Fecha"
                                                    Style="{StaticResource MaterialDesignFloatingHintDatePicker}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Monto"
                                                Binding="{Binding Monto, Mode=TwoWay}"
                                                Width="100"/>

                            <DataGridTemplateColumn Header="Medio" Width="180">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox Name="MedioPagoComboBox"
                                            ItemsSource="{Binding DataContext.MediosPago, RelativeSource={RelativeSource AncestorType=Window}}"
                                            DisplayMemberPath="Nombre"
                                            SelectedValuePath="Id"
                                            SelectedValue="{Binding MedioPagoId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="X"
                                                Command="{Binding DataContext.EliminarPagoCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Background="{DynamicResource AccentRed}"
                                                Foreground="{DynamicResource TextOnDark}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                        </DataGrid.Columns>
                    </DataGrid>

                </DockPanel>
            </Border>

        </Grid>



        <!-- ================= FOOTER ================= -->
        <Border Grid.Row="2" Background="{DynamicResource SurfaceCard}" CornerRadius="12" Padding="16" Margin="0,10,0,0">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="10" Opacity="0.1"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <TextBlock Text="{Binding Total, StringFormat='Total: ${0:N2}'}" Margin="20,0" FontSize="16" Foreground="{DynamicResource TextDark}"/>
                <TextBlock Text="{Binding Pagado, StringFormat='Pagado: ${0:N2}'}" Margin="20,0" FontSize="16" Foreground="{DynamicResource TextDark}"/>
                <TextBlock Text="{Binding Restante, StringFormat='Restante: ${0:N2}'}"
                           FontWeight="Bold" FontSize="18"
                           Foreground="{DynamicResource DangerSoft}"
                           Margin="20,0"/>

                <Button Content="Guardar"
                        Width="120" Height="40"
                        Margin="10,0,0,0"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="{DynamicResource AccentBlue}"
                        BorderBrush="{DynamicResource AccentBlue}"
                        Foreground="{DynamicResource TextOnDark}"
                        IsEnabled="{Binding EsEditable}"
                        Click="Guardar_Click"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
