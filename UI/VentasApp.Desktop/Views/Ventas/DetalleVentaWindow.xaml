<Window x:Class="VentasApp.Desktop.Views.Ventas.DetalleVentaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Detalle Venta"
        Height="600" Width="850"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="15">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <StackPanel>
            <TextBlock Text="{Binding Codigo}" FontSize="22" FontWeight="Bold"/>
            <TextBlock Text="{Binding Cliente}" Foreground="Gray"/>
        </StackPanel>

        <!-- CONTENIDO -->
        <Grid Grid.Row="1" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ITEMS -->
            <DataGrid ItemsSource="{Binding Items}"
                      AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Producto" Binding="{Binding Producto}"/>
                    <DataGridTextColumn Header="Precio" Binding="{Binding PrecioUnitario}"/>
                    <DataGridTextColumn Header="Cant." Binding="{Binding Cantidad}"/>
                    <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal}"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- PAGOS -->
            <DataGrid Grid.Column="1"
                      ItemsSource="{Binding Pagos}"
                      AutoGenerateColumns="False"
                      Margin="10,0,0,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha}"/>
                    <DataGridTextColumn Header="Monto" Binding="{Binding Monto}"/>
                    <DataGridTextColumn Header="Medio" Binding="{Binding Medio}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- FOOTER -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">

            <TextBlock Text="{Binding Total, StringFormat='Total ${0:N2}'}"
                       FontWeight="Bold"
                       Margin="0,0,20,0"/>

            <Button Content="Cerrar"
                    Width="100"
                    IsCancel="True"/>

        </StackPanel>

    </Grid>
</Window>
