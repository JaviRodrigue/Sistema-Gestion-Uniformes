<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:dtos="clr-namespace:VentasApp.Desktop.ViewModels.DTOs">

    <DataTemplate x:Key="ProductoCardTemplate" DataType="{x:Type dtos:ProductoCardDto}">
        <Border Background="White" CornerRadius="10" Margin="0,0,0,15" Padding="15">
            <Border.Effect>
                <DropShadowEffect Color="#DDDDDD" BlurRadius="10" Opacity="0.4"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Width="60" Height="60" CornerRadius="10" Margin="0,0,15,0">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="#F5F5F5"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Categoria}" Value="Uniforme">
                                    <Setter Property="Background" Value="{StaticResource PrimaryPastel}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Categoria}" Value="Librería">
                                    <Setter Property="Background" Value="{StaticResource SecondaryPastel}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <materialDesign:PackIcon Width="30" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource TextDark}">
                        <materialDesign:PackIcon.Style>
                            <Style TargetType="materialDesign:PackIcon">
                                <Setter Property="Kind" Value="Tag"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Categoria}" Value="Uniforme">
                                        <Setter Property="Kind" Value="TshirtCrew"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Categoria}" Value="Librería">
                                        <Setter Property="Kind" Value="BookOpenVariant"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </materialDesign:PackIcon.Style>
                    </materialDesign:PackIcon>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <Border Background="#EEEEEE" HorizontalAlignment="Left" CornerRadius="4" Padding="6,2" Margin="0,0,0,5">
                        <TextBlock Text="{Binding Categoria}" FontSize="10" Foreground="Gray"/>
                    </Border>

                    <TextBlock Text="{Binding Nombre}" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextDark}"/>

                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <materialDesign:PackIcon Kind="BarcodeScan" Width="14" Height="14" Foreground="Gray"/>
                        <TextBlock Text="{Binding CodigoBarraReferencia}" Margin="5,0,0,0" Foreground="Gray" FontSize="12"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding Precio, StringFormat=${0:N2}}" 
                               FontSize="20" FontWeight="Bold" Foreground="{StaticResource AccentBlue}" 
                               HorizontalAlignment="Right" Margin="0,0,0,5"/>

                    <Border CornerRadius="5" Padding="8,4" HorizontalAlignment="Right">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="{StaticResource SecondaryPastel}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding StockTotal}" Value="0">
                                        <Setter Property="Background" Value="{StaticResource AccentRed}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="PackageVariant" Width="14" Height="14" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding StockTotal, StringFormat='Stock: {0}'}" FontWeight="SemiBold" FontSize="12">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding StockTotal}" Value="0">
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Acciones -->
                <StackPanel Grid.Column="3" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="15,0,0,0">
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="{StaticResource SecondaryPastel}"
                            BorderBrush="{StaticResource SecondaryPastel}"
                            ToolTip="Editar producto"
                            Command="{Binding DataContext.EditarProductoCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                            CommandParameter="{Binding}" Margin="0,0,0,6">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Pencil" Width="16" Height="16" Foreground="Gray"/>
                            <TextBlock Text="Editar" Margin="6,0,0,0" Foreground="Gray"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="{StaticResource AccentRed}"
                            BorderBrush="{StaticResource AccentRed}"
                            Foreground="White"
                            ToolTip="Eliminar producto"
                            Command="{Binding DataContext.EliminarProductoCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                            CommandParameter="{Binding}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="TrashCan" Width="16" Height="16" Foreground="Gray"/>
                            <TextBlock Text="Eliminar" Margin="6,0,0,0" Foreground="Gray"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </DataTemplate>
</ResourceDictionary>