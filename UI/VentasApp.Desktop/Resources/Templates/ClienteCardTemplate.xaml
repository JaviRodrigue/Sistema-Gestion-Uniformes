<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:dtos="clr-namespace:VentasApp.Desktop.ViewModels.DTOs"
                    xmlns:conv="clr-namespace:VentasApp.Desktop.Converters">

    <conv:DeudaColorConverter x:Key="DeudaColorConverter"/>
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

    <DataTemplate x:Key="ClienteCardTemplate" DataType="{x:Type dtos:ClienteCardDto}">

        <Border CornerRadius="12" Margin="0,0,0,15" Padding="5"
                Background="{Binding TieneDeuda, Converter={StaticResource DeudaColorConverter}}">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="10" Opacity="0.18"/>
            </Border.Effect>

            <Expander Background="Transparent" BorderThickness="0">
                <Expander.Header>
                    <Grid HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="{DynamicResource SecondaryPastel}" 
                                CornerRadius="30" Width="50" Height="50">
                            <materialDesign:PackIcon Kind="User" Width="25" Height="25" 
                                                     VerticalAlignment="Center" HorizontalAlignment="Center" 
                                                     Foreground="{DynamicResource TextDark}"/>
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0">
                            <TextBlock Text="{Binding Nombre}" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource TextDark}"/>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CardAccountDetails" Width="14" Height="14" Foreground="{DynamicResource TextMuted}"/>
                                <TextBlock Text="{Binding Dni}" Margin="5,0,10,0" Foreground="{DynamicResource TextMuted}"/>

                                <materialDesign:PackIcon Kind="Phone" Width="14" Height="14" Foreground="{DynamicResource TextMuted}"/>
                                <TextBlock Text="{Binding Telefonos}" Margin="5,0,0,0" Foreground="{DynamicResource TextMuted}"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="0,0,10,0">
                            <Border Visibility="{Binding TieneDeuda, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    Background="{DynamicResource AccentRed}" CornerRadius="5" Padding="10,4">
                                <TextBlock Text="DEUDOR" Foreground="{DynamicResource TextOnDark}" FontWeight="Bold" FontSize="10"/>
                            </Border>
                            <TextBlock Text="{Binding DeudaTotal, StringFormat='Debe: ${0:N2}'}" 
                                       Visibility="{Binding TieneDeuda, Converter={StaticResource BooleanToVisibilityConverter}}"
                                       Foreground="{DynamicResource DangerSoft}" HorizontalAlignment="Right" FontSize="11" Margin="0,2,0,0"/>
                        </StackPanel>

                        <!-- Acciones -->
                        <StackPanel Grid.Column="3" Orientation="Vertical" VerticalAlignment="Center">
                            <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="{DynamicResource SecondaryPastel}"
                                    BorderBrush="{DynamicResource SecondaryPastel}"
                                    ToolTip="Editar cliente"
                                    Command="{Binding DataContext.EditarClienteCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                    CommandParameter="{Binding}" Margin="0,0,0,6">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Pencil" Width="16" Height="16" Foreground="{DynamicResource TextMuted}"/>
                                    <TextBlock Text="Editar" Margin="6,0,0,0" Foreground="{DynamicResource TextMuted}"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="{DynamicResource AccentRed}"
                                    BorderBrush="{DynamicResource AccentRed}"
                                    Foreground="{DynamicResource TextOnDark}"
                                    ToolTip="Eliminar cliente"
                                    Command="{Binding DataContext.EliminarClienteCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                    CommandParameter="{Binding}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="TrashCan" Width="16" Height="16" Foreground="{DynamicResource TextOnDark}"/>
                                    <TextBlock Text="Eliminar" Margin="6,0,0,0" Foreground="{DynamicResource TextOnDark}"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Expander.Header>

                <Border Background="{DynamicResource SurfaceCard}" CornerRadius="10,10,10,10" Padding="10" Margin="10,0">
                    <StackPanel>
                        <TextBlock Text="Historial Reciente" FontWeight="SemiBold" Margin="0,0,0,10"/>

                        <!-- Encabezados de columnas -->
                        <Grid Margin="10,0,10,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="ID" FontWeight="SemiBold" Foreground="{DynamicResource TextMuted}" FontSize="12"/>
                            <TextBlock Grid.Column="1" Text="Fecha" FontWeight="SemiBold" Foreground="{DynamicResource TextMuted}" FontSize="12"/>
                            <TextBlock Grid.Column="2" Text="Total" FontWeight="SemiBold" Foreground="{DynamicResource TextMuted}" FontSize="12"/>
                            <TextBlock Grid.Column="3" Text="Estado" FontWeight="SemiBold" Foreground="{DynamicResource TextMuted}" FontSize="12"/>
                        </Grid>

                        <ItemsControl ItemsSource="{Binding UltimasCompras}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="8" Margin="0,0,0,8" Padding="10">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="{DynamicResource SurfaceLight}"/>
                                                <Style.Triggers>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding DataContext.TieneDeuda, RelativeSource={RelativeSource AncestorType=ItemsControl}}" Value="True"/>
                                                            <Condition Binding="{Binding EstadoVenta}" Value="Pendiente"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Background" Value="{DynamicResource DangerSoft}"/>
                                                    </MultiDataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding DataContext.TieneDeuda, RelativeSource={RelativeSource AncestorType=ItemsControl}}" Value="True"/>
                                                            <Condition Binding="{Binding EstadoVenta}" Value="Anulada"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Background" Value="{DynamicResource WarningSoft}"/>
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="50"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding Id}" VerticalAlignment="Center" Foreground="{DynamicResource TextMuted}"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Fecha, StringFormat=d}" VerticalAlignment="Center" Foreground="{DynamicResource TextDark}"/>
                                            <Border Grid.Column="2" Background="{DynamicResource SecondaryPastel}" CornerRadius="10" Padding="8,2" HorizontalAlignment="Left" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Total, StringFormat=C}" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="{DynamicResource TextDark}"/>
                                            </Border>
                                            <Border Grid.Column="3" Background="{DynamicResource SecondaryPastel}" CornerRadius="10" Padding="8,2" HorizontalAlignment="Left" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding EstadoVenta}" FontSize="10" Foreground="{DynamicResource TextMuted}"/>
                                            </Border>
                                            <Button Grid.Column="4" Style="{StaticResource MaterialDesignFlatButton}"
                                                    Content="Ver" Height="25" FontSize="10" Padding="8,0"
                                                    Command="{Binding DataContext.VerDetalleVentaCommand, RelativeSource={RelativeSource AncestorType=Expander}}"
                                                    CommandParameter="{Binding}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Expander>
        </Border>
    </DataTemplate>
</ResourceDictionary>
