<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:dtos="clr-namespace:VentasApp.Desktop.ViewModels.DTOs"
                    xmlns:conv="clr-namespace:VentasApp.Desktop.Converters">

    <conv:DeudaColorConverter x:Key="DeudaColorConverter"/>
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

    <DataTemplate x:Key="ClienteCardTemplate" DataType="{x:Type dtos:ClienteCardDto}">

        <Border CornerRadius="12" Margin="0,0,0,15" Padding="5"
                Background="{Binding TieneDeuda, Converter={StaticResource DeudaColorConverter}}">
            <Border.Effect>
                <DropShadowEffect Color="#DDDDDD" BlurRadius="10" Opacity="0.4"/>
            </Border.Effect>

            <Expander Background="Transparent" BorderThickness="0">
                <Expander.Header>
                    <Grid HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="{StaticResource SecondaryPastel}" 
                                CornerRadius="30" Width="50" Height="50">
                            <materialDesign:PackIcon Kind="User" Width="25" Height="25" 
                                                     VerticalAlignment="Center" HorizontalAlignment="Center" 
                                                     Foreground="{StaticResource TextDark}"/>
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0">
                            <TextBlock Text="{Binding Nombre}" FontWeight="Bold" FontSize="16" Foreground="{StaticResource TextDark}"/>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CardAccountDetails" Width="14" Height="14" Foreground="Gray"/>
                                <TextBlock Text="{Binding Dni}" Margin="5,0,10,0" Foreground="Gray"/>

                                <materialDesign:PackIcon Kind="Phone" Width="14" Height="14" Foreground="Gray"/>
                                <TextBlock Text="{Binding Telefonos}" Margin="5,0,0,0" Foreground="Gray"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="0,0,10,0">
                            <Border Visibility="{Binding TieneDeuda, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    Background="{StaticResource AccentRed}" CornerRadius="5" Padding="10,4">
                                <TextBlock Text="DEUDOR" Foreground="White" FontWeight="Bold" FontSize="10"/>
                            </Border>
                            <TextBlock Text="{Binding DeudaTotal, StringFormat='Debé: ${0:N2}'}" 
                                       Visibility="{Binding TieneDeuda, Converter={StaticResource BooleanToVisibilityConverter}}"
                                       Foreground="Red" HorizontalAlignment="Right" FontSize="11" Margin="0,2,0,0"/>
                        </StackPanel>

                        <!-- Acciones -->
                        <StackPanel Grid.Column="3" Orientation="Vertical" VerticalAlignment="Center">
                            <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="{StaticResource SecondaryPastel}"
                                    BorderBrush="{StaticResource SecondaryPastel}"
                                    ToolTip="Editar cliente"
                                    Command="{Binding DataContext.EditarClienteCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                    CommandParameter="{Binding}" Margin="0,0,0,6">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Pencil" Width="16" Height="16" Foreground="Gray"/>
                                    <TextBlock Text="Editar" Margin="6,0,0,0" Foreground="Gray"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="{StaticResource AccentRed}"
                                    BorderBrush="{StaticResource AccentRed}"
                                    Foreground="White"
                                    ToolTip="Eliminar cliente"
                                    Command="{Binding DataContext.EliminarClienteCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                    CommandParameter="{Binding}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="TrashCan" Width="16" Height="16" Foreground="Gray"/>
                                    <TextBlock Text="Eliminar" Margin="6,0,0,0" Foreground="Gray"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Expander.Header>

                <Border Background="White" CornerRadius="0,0,10,10" Padding="10" Margin="10,0">
                    <StackPanel>
                        <TextBlock Text="Historial Reciente" FontWeight="SemiBold" Margin="0,0,0,5"/>

                        <DataGrid ItemsSource="{Binding UltimasCompras}" AutoGenerateColumns="False" 
                                  HeadersVisibility="Column" IsReadOnly="True" GridLinesVisibility="Horizontal"
                                  Background="Transparent" BorderThickness="0">
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Style.Triggers>
                                        <!-- Cliente moroso y venta pendiente: rojo -->
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding DataContext.TieneDeuda, RelativeSource={RelativeSource AncestorType=DataGrid}}" Value="True"/>
                                                <Condition Binding="{Binding Estado}" Value="Pendiente"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Background" Value="{StaticResource DangerSoft}"/>
                                        </MultiDataTrigger>
                                        <!-- Cliente moroso y venta anulada: advertencia -->
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding DataContext.TieneDeuda, RelativeSource={RelativeSource AncestorType=DataGrid}}" Value="True"/>
                                                <Condition Binding="{Binding Estado}" Value="Anulada"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Background" Value="{StaticResource WarningSoft}"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding IdVenta}"/>
                                <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha, StringFormat=d}"/>
                                <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat=C}"/>
                                <DataGridTemplateColumn Header="Estado">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                             <Border Background="{StaticResource SurfaceLight}" CornerRadius="10" Padding="8,2">
                                                <TextBlock Text="{Binding Estado}" FontSize="10"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Style="{StaticResource MaterialDesignFlatButton}" 
                                                    Content="Ver" Height="25" FontSize="10"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
            </Expander>
        </Border>
    </DataTemplate>
</ResourceDictionary>