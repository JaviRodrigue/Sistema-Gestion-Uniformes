<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="PrimaryBlue" Color="#007BFF"/>
    <SolidColorBrush x:Key="SidebarTextGray" Color="#333333"/>
    <SolidColorBrush x:Key="HoverGray" Color="#F8F9FA"/>

    <Style x:Key="SidebarButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource SidebarTextGray}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Root"
                            CornerRadius="8"
                            Margin="4,2"
                            Background="{TemplateBinding Background}">
                        <ContentPresenter x:Name="Content" 
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="Center"/>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Root" Property="Background" Value="{StaticResource HoverGray}"/>
                        </Trigger>

                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                            <Setter TargetName="Root" Property="Background" Value="{StaticResource PrimaryBlue}"/>
                            <Setter Property="Foreground" Value="White"/>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>