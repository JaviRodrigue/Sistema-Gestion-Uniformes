<UserControl x:Class="VentasApp.Presentation.Controls.SidebarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Background="#1E1E2F" Width="220">
        <DockPanel>

            <!-- Branding -->
            <StackPanel DockPanel.Dock="Top" Margin="15">
                <TextBlock Text="{Binding NombreNegocio}"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"/>
            </StackPanel>

            <!-- Menu -->
            <StackPanel Margin="10">

                <Button Content="Ventas"
                        Command="{Binding IrVentasCommand}"
                        Style="{StaticResource SidebarButtonStyle}" />

                <Button Content="Productos"
                        Command="{Binding IrProductosCommand}"
                        Style="{StaticResource SidebarButtonStyle}" />

                <Button Content="CategorÃ­as"
                        Command="{Binding IrCategoriasCommand}"
                        Style="{StaticResource SidebarButtonStyle}" />

                <Button Content="Stock"
                        Command="{Binding IrStockCommand}"
                        Style="{StaticResource SidebarButtonStyle}" />

                <Button Content="Pagos"
                        Command="{Binding IrPagosCommand}"
                        Style="{StaticResource SidebarButtonStyle}" />

            </StackPanel>
        </DockPanel>
    </Border>
</UserControl>
